@page
@model Estelav.Pages.Account.RegisterModel
@{
}

<div class="layout-main">
    <div class="login__row-layout" style="-o-justify-content: center!important; -webkit-justify-content: center!important; justify-content: center!important;">
        <div class="loginFormMain">
            <div class="login__form login__form_mob-active" >

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="title title_fourth">REGISTER</h2>
                    <hr/>
                    <fieldset class="layout-form-vert-1">

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="layout-form-row">
                            <label asp-for="Input.Name"></label>
                            <input asp-for="Input.Name" class="form-control"/>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>


                        <div class="layout-form-row">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control"/>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="layout-form-row">
                            <label asp-for="Input.Phone"></label>
                            <input asp-for="Input.Phone" class="form-control"/>
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>

                        <div class="layout-form-row">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control"/>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="layout-form-row">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control"/>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button style="height: 50px; width: 100%; background-color: black; border-radius: 10px; color: white;">Register</button>
                    </fieldset>
                </form>
                </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}