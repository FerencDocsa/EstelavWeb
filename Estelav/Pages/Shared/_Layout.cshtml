@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark" style="background: #EFDBDC;">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" asp-page="/Index">
                <img src="/img/logo.png" width="130" height="20" class="d-inline-block align-top" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="navbar-collapse collapse justify-content-center order-2" style="white-space: nowrap;" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/Items" asp-route-id="6">@ViewLocalizer["New In"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/Items" asp-route-id="7">@ViewLocalizer["Clothes"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/Items" asp-route-id="2">@ViewLocalizer["Shoes"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/Items" asp-route-id="5">@ViewLocalizer["Pants"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/Items" asp-route-id="1">@ViewLocalizer["Bags"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/Items" asp-route-id="8">@ViewLocalizer["Accessories"]</a>
                </li>
            </ul>
        </div>
        <span class="navbar-text small text-truncate mt-1 w-50 text-right order-1 order-md-last">

            <partial name="_CulturePartial" />

            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin"))
                {
                    <a style="color: black; font-weight: bold;" class="profile_link" asp-page="/Panel/AdminPanel">Admin Page</a>
                }

                <a style="margin: 0 5px 0 5px; color: black;">
                    <a style="color: black;" asp-page="/Account/Profile">
                        <img width="25" height="25" src="~/img/user.png" style="position: relative; top: 9px; right: 6px; text-decoration: none;" />
                    </a>
                    <a style="color: black;" class="profile_link" asp-page="/Account/Profile">@ViewLocalizer["Profile"]</a>
                    <a style="color: black; margin-right: 5px;" class="profile_link" asp-page="/Account/Logout">(@ViewLocalizer["Logout"])</a>
                </a>
            }
            else
            {
                <a asp-page="/Account/Login" style="color: black;">
                    <img width="25" height="25" src="~/img/user.png" style="position: relative; top: 9px; right: 6px;" />
                </a>
                <a asp-page="/Account/Login" class="profile_link" style="color: black; margin-right: 15px;">
                    @ViewLocalizer["Login"]
                </a>
            }


            <a asp-page="/Cart/Index" style="color: black;">
                <img width="25" height="25" src="~/img/bag.png" style="position: relative; top: 8px; margin-right: 10px;" />
            </a>

            <a asp-page="/Cart/Index" style="color: black;" class="profile_link">@ViewLocalizer["Cart"]</a>


        </span>
    </nav>
    <div class="layuot-global">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="footer" itemscope="" itemtype="http://schema.org/WPFooter" style="background: #efdbdc;">
        <meta itemprop="copyrightYear" content="2021">
        <div class="layout-main">
            <div style="display: flex; flex-direction: row; width: 100%; justify-content: space-evenly; flex-wrap: wrap;">
                <span>@ViewLocalizer["Contacts"]</span>
                <span>@ViewLocalizer["Find Us On Instagram"]</span>
                <span>@ViewLocalizer["Payment & Shipping"]</span>
                <span>@ViewLocalizer["F.A.Q"]</span>
                <span>@ViewLocalizer["How to place an Order"]</span>
            </div>

            <div style="display: flex;"></div>
        </div>


        @*<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1279.9949904215134!2d14.426504633679555!3d50.08647445136424!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470b94eb70458d97%3A0xfeea998316a7ffe1!2zTmEgUMWZw61rb3DEmyAyOS0yNywgMTEwIDAwIFN0YXLDqSBNxJtzdG8!5e0!3m2!1sru!2scz!4v1628253756216!5m2!1sru!2scz" width="300" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>*@


    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>

@RenderSection("scripts", required: false)
